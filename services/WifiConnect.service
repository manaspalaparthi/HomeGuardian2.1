[Unit]
Description= HomeGuardian Wifi Scanner
After=multi-user.target

[Service]
Type=simple
ExecStart=/bin/bash -c "source /home/homeguardiandev/miniconda3/bin/activate homeguardian && python util/wifi_scanner.py"
