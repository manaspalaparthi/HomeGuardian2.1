[Unit]
Description= HomeGuardian Wifi Scanner

[Service]
Type=simple
ExecStartPre=/bin/sleep 10
ExecStart=/bin/bash -c "source /home/homeguardiandev/miniforge3/bin/activate homeguardian && python wifi_scanner.py"
WorkingDirectory=/home/homeguardiandev/HomeGuardian2.1/
StandardOutput=inherit
